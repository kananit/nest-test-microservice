{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-api/src",
  "monorepo": true,
  "root": "apps/nest-api",
  "projects": {
    "module-postgres": {
      "type": "library",
      "root": "libs/module-postgres",
      "entryFile": "index",
      "sourceRoot": "libs/module-postgres/src",
      "compilerOptions": {
        "tsConfigPath": "libs/module-postgres/tsconfig.lib.json"
      }
    },
    "user-api": {
      "type": "application",
      "root": "apps/user-api",
      "entryFile": "main",
      "sourceRoot": "apps/user-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-api/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}
