{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-api/src",

  "monorepo": true,
  "root": "apps/nest-api",
  "projects": {
    "module-api": {
      "type": "library",
      "root": "libs/module-api",
      "entryFile": "index",
      "sourceRoot": "libs/module-api/src",
      "compilerOptions": {
        "tsConfigPath": "libs/module-api/tsconfig.lib.json"
      }
    },

    "user-api": {
      "type": "application",
      "root": "apps/user-api",
      "entryFile": "main",
      "sourceRoot": "apps/user-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-api/tsconfig.app.json"
      }
    }
  }
}
